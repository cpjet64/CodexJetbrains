#!/usr/bin/env sh
set -eu

repo_root="$(git rev-parse --show-toplevel 2>/dev/null || true)"
if [ -z "$repo_root" ]; then
  echo "pre-commit: unable to determine repository root" >&2
  exit 1
fi
cd "$repo_root"

if command -v just >/dev/null 2>&1; then
  exec just ci-fast
fi

echo "pre-commit: 'just' not found â€” skipping ci-fast" >&2
exit 0
